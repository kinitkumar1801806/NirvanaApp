<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Clinics.ClinicPhoneVerification">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="326dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@drawable/green_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N i r v a n a"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:focusable="true"
        android:theme="@style/MyTextInputLayout"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:src="@drawable/otp" />

        <EditText
            android:id="@+id/code_clinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:paddingLeft="100dp"
            android:gravity="left"
            android:textSize="30sp"
            android:hint="Enter Verification code"
            android:textAlignment="center" />
    </com.google.android.material.textfield.TextInputLayout>
    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/verify_clinic"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="75dp"
        android:text="Verify"
        android:onClick="verify_clinic"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/button_rounded"
        android:textSize="35sp" />
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:id="@+id/progress_verify"/>
</LinearLayout>