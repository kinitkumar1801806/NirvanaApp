<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Doctors.DoctorPhoneVerification">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="126dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/green_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N i r v a n a"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:focusable="true"
        android:theme="@style/MyTextInputLayout"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-45dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:src="@drawable/otp" />

        <EditText
            android:id="@+id/code_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:gravity="left"
            android:paddingLeft="40dp"
            android:hint="Enter Verification code"
            android:textAlignment="center" />
    </com.google.android.material.textfield.TextInputLayout>
    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/doctor_verify"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="Verify"
        android:onClick="verify_doctor"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/button_rounded"
        android:textSize="20sp" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:id="@+id/progress_verify"/>
</LinearLayout>