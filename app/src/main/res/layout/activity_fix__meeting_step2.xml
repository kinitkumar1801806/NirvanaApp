<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signup_bg"
    tools:context=".Patients.Fix_Meeting_step2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<Button
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:background="@android:color/holo_blue_bright"
    android:layout_gravity="right"
    android:onClick="fix_the_meeting"
    android:text="Fix Meeting"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_launcher_background"
        android:id="@+id/doctor_image"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginLeft="28dp"

        android:text="Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:id="@+id/doctor_name"
        android:maxLines="1"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginLeft="130dp"
        android:text="Kinit Kumar soifiosd"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="28dp"
            android:text="Qualification"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="67dp"
            android:maxLines="2"
            android:id="@+id/qualification"
            android:paddingRight="5dp"
            android:text="ndognaond sdfksndziof ndfiod"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="28dp"
            android:text="LinkedIn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:onClick="linkedIn"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="italic"
            android:layout_marginLeft="110dp"
            android:maxLines="4"
            android:id="@+id/linkedIn_url"
            android:paddingRight="5dp"
            android:text="profile url"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="28dp"
            android:text="Total Patient"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:onClick="linkedIn"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="72dp"
            android:maxLines="4"
            android:id="@+id/total_patient"
            android:paddingRight="5dp"
            android:text="200"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="28dp"
            android:text="Satisfied Patient"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:onClick="linkedIn"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="40dp"
            android:maxLines="4"
            android:id="@+id/satisfied_patient"
            android:paddingRight="5dp"
            android:text="150"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="28dp"
            android:text="Rating"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:onClick="linkedIn"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="131dp"
            android:maxLines="4"
            android:id="@+id/rating"
            android:paddingRight="5dp"
            android:text="8.0 (By 300 people) "/>
    </LinearLayout>

    </LinearLayout>
</ScrollView>