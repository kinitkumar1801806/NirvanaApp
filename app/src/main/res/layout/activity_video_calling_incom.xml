<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_dark_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_calling"
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="Call background"
        android:src="@drawable/image1">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Kinit Kumar"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:layout_below="@id/profile_image_calling"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/patient_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Male, 21 Years"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:layout_below="@id/patient_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/callState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Incoming Video Call"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:layout_below="@id/patient_info"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/end_call"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/endcall_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/video_off"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:src="@drawable/video_call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mute"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/micoff_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


</RelativeLayout>