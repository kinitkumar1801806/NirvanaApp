<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_gradient">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_calling"
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="Call background"
        android:src="@drawable/image1">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/remoteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Kinit Kumar"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:layout_below="@id/profile_image_calling"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/patient_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Male, 21 Years"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:layout_below="@id/remoteUser"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/callState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Incoming Voice Call"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:layout_below="@id/patient_info"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/green_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_angle_double_up_solid___green"
        android:layout_alignBottom="@id/pick_call"
        android:layout_marginBottom="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp"
        />
    <ImageView
        android:id="@+id/red_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_angle_double_up_solid___red"
        android:layout_marginLeft="55dp"
       android:layout_alignBottom="@id/pick_call"
        android:layout_marginBottom="90dp"
        />
        <ImageView
            android:id="@+id/hangup"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_baseline_call_24"
            android:background="@drawable/hangup"
            android:layout_alignParentBottom="true" />
        <ImageView
            android:id="@+id/pick_call"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/buttons"
            android:layout_centerHorizontal="true"
            android:background="@drawable/answer_call"
            android:backgroundTint="@color/green"
            android:padding="10dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_call_24" />

</RelativeLayout>