<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SignupFragment"
    android:orientation="vertical"
    android:id="@+id/signup_fragment">
    <ImageView
        android:layout_width="200dp"
        android:id="@+id/logo"
        android:layout_height="126dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/green_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nirvana"
        android:textSize="28sp"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/logo"
        android:textColor="@color/green"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/helveticaneuemedium"
        android:text="Login as"
        android:textColorHint="@color/white"
        android:textSize="22sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:id="@+id/relativeLayout1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:id="@+id/patient"
                android:onClick="patient_signin"
                app:civ_circle_background_color="@color/green"
                android:src="@drawable/person_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client"
                android:textSize="15sp"
                android:layout_alignTop="@+id/patient"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"/>
    </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="90dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:id="@+id/relativeLayout2">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:id="@+id/doctor"
                android:onClick="doctor_signin"
                app:civ_circle_background_color="@color/green"
                android:src="@drawable/doctor_signup"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor"
                android:layout_alignTop="@+id/doctor"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"/>
            </RelativeLayout>
</RelativeLayout>