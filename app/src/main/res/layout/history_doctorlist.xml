<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="505dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/green"
        android:elevation="50dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dp"
                android:id="@+id/patient"
                app:civ_border_color="@color/green"
                app:civ_border_width="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:id="@+id/patient_name"
                android:layout_gravity="center_horizontal"
                android:text="Dr. Shreyashi"
                android:layout_marginTop="35dp"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica"
                android:id="@+id/patient_problem"
                android:layout_gravity="center_horizontal"
                android:text="Psychiatrist"
                android:layout_marginTop="1dp"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:fontFamily="@font/helvetica"
                android:layout_gravity="center_horizontal"
                android:text="Meeting Details"
                android:layout_marginTop="20dp"
                android:textSize="15sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/white"
                    android:fontFamily="@font/helvetica"
                    android:id="@+id/date"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentLeft="true"
                    android:text="20 Sep,2021"
                    android:layout_marginTop="1dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textColor="@color/white"
                    android:fontFamily="@font/helvetica"
                    android:id="@+id/time"
                    android:layout_alignParentRight="true"
                    android:text="6:00 P.M"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="1dp"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:fontFamily="@font/helveticaneuemedium"
                android:text="Details"
                android:id="@+id/details"
                android:textSize="15dp"
                android:backgroundTint="#49CD59"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>