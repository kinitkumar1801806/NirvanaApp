<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/green"
        android:elevation="50dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dp"
                android:id="@+id/doctor_image"
                app:civ_border_color="@color/green"
                app:civ_border_width="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:id="@+id/doctor_name"
                android:layout_gravity="center_horizontal"
                android:text="Dr. Shreyashi"
                android:layout_marginTop="55dp"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica"
                android:id="@+id/doctor_degree"
                android:layout_gravity="center_horizontal"
                android:text="Psychiatrist"
                android:layout_marginTop="1dp"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:fontFamily="@font/helvetica"
                android:layout_gravity="center_horizontal"
                android:text="Meeting Details"
                android:layout_marginTop="20dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica"
                android:id="@+id/date_time"
                android:layout_gravity="center_horizontal"
                android:text="20 Sep,2021 6P.M"
                android:layout_marginTop="1dp"
                android:textSize="20sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:fontFamily="@font/helveticaneuemedium"
                android:text="Details"
                android:id="@+id/details"
                android:textSize="15dp"
                android:backgroundTint="#49CD59"
                />
     </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>