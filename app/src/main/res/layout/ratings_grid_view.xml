<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_height="95dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/answer_call">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/person"
            android:src="@drawable/person_white"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/patient_name"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="xyz"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:layout_alignLeft="@+id/person"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="diufvufhid"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="28dp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:layout_alignLeft="@+id/person"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/rate1"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_marginLeft="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_alignLeft="@id/person"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/rate2"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_alignLeft="@id/rate1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/rate3"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_alignLeft="@id/rate2"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/rate4"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_alignLeft="@id/rate3"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/rate5"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_alignLeft="@id/rate4"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="14/10/2020"
            android:textColor="@color/white"
            android:layout_alignRight="@+id/time"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="68dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="04:00 PM"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="25dp"/>
    </RelativeLayout>

</LinearLayout>