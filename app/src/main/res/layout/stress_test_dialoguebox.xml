<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_height="300dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentModule"
        android:text="Introductory Module Report"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Test Report"
        android:layout_alignTop="@id/currentModule"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Test Report"
        android:id="@+id/lastTestReport"
        android:layout_alignTop="@id/currentModule"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Test Report"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Test Report"
        android:id="@+id/currentTestReport"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:textSize="15sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Finish Test"
        android:id="@+id/finishTest"
        android:layout_marginBottom="20dp"
        android:theme="@style/GreenTextColor"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_round_white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Next Module"
        android:id="@+id/nextModule"
        android:layout_marginBottom="20dp"
        android:theme="@style/GreenTextColor"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_round_white"/>
</RelativeLayout>
</RelativeLayout>